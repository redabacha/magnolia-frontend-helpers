{
    "env": {
        "browser": true,
        "es6": true,
        "jasmine": true
    },
    "extends": ["eslint:recommended", "airbnb-base/legacy"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "process": "readonly",
        "module": "readonly",
        "require": "readonly",
        "__dirname": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": "warn",
        "no-use-before-define": "off",
        "no-nested-ternary": "off",
        "max-len": ["warn", 160]
    }
}